<Window x:Class="MyControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Grid>
        <local:CircularProgress Height="100" Width="100" Margin="5" HorizontalAlignment="Center" x:Name="circle"
                                StrokeThickness="10" Value="{Binding Value}"/>
        <Button Content="Next" Click="Button_Click" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
