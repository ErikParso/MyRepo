<UserControl x:Class="Kros.TroubleShooterClient.View.OptionalPropertyUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kros.TroubleShooterClient.View"
             xmlns:vim="clr-namespace:Kros.TroubleShooterClient.ViewModel"
             mc:Ignorable="d">
    <GroupBox Header="{Binding Name}" BorderBrush="Transparent">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox Margin="5" Grid.Column="0" Text="{Binding Value}" IsEnabled="{Binding Editable}" AcceptsReturn="True" TextWrapping="Wrap"/>
        </Grid>
    </GroupBox>
</UserControl>
