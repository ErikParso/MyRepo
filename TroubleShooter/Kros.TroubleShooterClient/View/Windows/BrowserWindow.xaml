<Window x:Class="Kros.TroubleShooterClient.View.BrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kros.TroubleShooterClient.View"
        xmlns:myControls="clr-namespace:MyControls;assembly=MyControls"
        xmlns:res="clr-namespace:Kros.TroubleShooterClient.Properties"
        mc:Ignorable="d"
        Title="BrowserWindow" Height="500" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <WebBrowser Grid.Row="0" Name="WebBrowser" Margin="3"/>
        <myControls:TextButtonUC WithDescription="Visible" x:Name="finishButton" Margin="3" MainText="Ukončiť" 
                                 DescriptionText="{x:Static res:Resources.buttonDesc4}" Grid.Row="1" Grid.ColumnSpan="2"
                                 Click="FinishClick" Source="/Kros.TroubleShooterClient;component/Resources/exit.png"/>
    </Grid>
</Window>
